# Air-Gapped (Offline) Environment Configuration

NODE_ENV=production
LOG_LEVEL=info

# Backend
BACKEND_PORT=3000
BACKEND_HOST=localhost

# Frontend
FRONTEND_PORT=5173
VITE_API_BASE_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# Features
ENABLE_MOCK_DEVICES=true
ENABLE_TELEMETRY_LOGGING=true
OFFLINE_MODE=true
DISABLE_REMOTE_FIRMWARE_CHECKS=true

# Encryption
ENABLE_CONFIG_ENCRYPTION=true